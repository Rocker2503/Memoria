@model LibroVirtual.Models.Asignatura

@{
    ViewData["Title"] = "AgregarOEditar";
    var IdUrl = ViewContext.RouteData.Values["id"];
    int id = Convert.ToInt32(IdUrl);
}

<h2>Agregar</h2>

<h4>Asignatura</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HorasSemanales" class="control-label"></label>
                <input asp-for="HorasSemanales" class="form-control" />
                <span asp-validation-for="HorasSemanales" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="RefCurso" value="@id"/>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
