@model IEnumerable<LibroVirtual.Models.Asignatura>

@{
    ViewData["Title"] = "Index";
    var IdUrl = ViewContext.RouteData.Values["id"];
    int id = Convert.ToInt32(IdUrl);
}

<h2>Asignaturas</h2>

<p>
    <a asp-action="Index" asp-controller="Alumnos" asp-route-id="@id">Ver Alumnos</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HorasSemanales)
            </th>
            <th>
                <a asp-action="Create" asp-route-id="@id" class="btn btn-info">Crear Asignatura</a>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HorasSemanales)
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">Ver Info</a>
                    <a data-toggle="modal" data-target="#myModal" class="btn btn-success" onclick="getDataAjax('@item.Id')">Editar</a>
                    <a data-toggle="modal" data-target="#myModal2" class="btn btn-danger" onclick="getDataAjax('@item.Id')">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Editar Asignatura</h4>
            </div>
            <div class="modal-body">
                <form asp-action="Edit">
                    <div class="form-horizontal">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" name="Id" id="Id" for="Id" />
                        <div class="form-group">
                            <div class="col-md-10">
                                <label for="Nombre" class="control-label">Nombre</label>
                                <input for="Nombre" id="Nombre" name="Nombre" class="form-control" />
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-10">
                                <label for="HorasSemanales" class="control-label">HorasSemanales</label>
                                <input type="number" for="HorasSemanales" id="HorasSemanales" name="HorasSemanales" class="form-control" />
                            </div>
                        </div>
                        <div class="form-group">
                            <input type="hidden" for="RefCurso" id="RefCurso" name="RefCurso"/>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
                <button type="button" onclick="setDataUser()" class="btn btn-primary">Guardar</button>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="myModal2" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="myModalLabel">Eliminar Curso</h4>
            </div>
            <div class="modal-body">
                <h4 id="parrafo5"></h4>
                <input type="hidden" name="Id" id="Id" />
                <p>¿Está seguro de eliminar esta Asignatura?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
                <button type="button" onclick="eliminarAsignatura()" class="btn btn-danger">Eliminar</button>
            </div>
        </div>
    </div>
</div>


<script type="text/javascript">

     $('#myModal').on('shown.bs.modal', function () {
     })

    $('#myModal2').on('shown.bs.modal', function () { })

    var items;

    function getDataAjax( id ) {
        var url = window.location.origin + '/Asignaturas/EditAjax';
        console.log(url);
        $.ajax({
            type: "POST",
            data: { id },
            url : url,
            success: function (response) {
                console.log(response);
                onSuccess(response);
            }
        });
    }

    function onSuccess(response) {
        items = response;
        $.each(items, function (index, val) {
            $('input[name=Id]').val(val.id);
            $('input[name=Nombre]').val(val.nombre);
            $('input[name=HorasSemanales]').val(val.horasSemanales);
            $('input[name=RefCurso]').val(val.refCurso);
        });
        $.each(items, function (index, val) {
            $("#parrafo5").text(val.nombre);
            $("input[name=Id]").val(val.id);
        });
    }

    function setDataUser() {
        var id = $('input[name=Id]')[0].value;
        var nombre = $('input[name=Nombre]')[0].value;
        var horassemanales = $('input[name=HorasSemanales]')[0].value;
        var refcurso = $('input[name=RefCurso]')[0].value;

        console.log(id, nombre, horassemanales, refcurso);

        if (nombre == "") {
            $("#Nombre").focus();
            alert("Ingrese un Nombre");
        }

        if (horassemanales == "") {
            $("#HorasSemanales").focus();
            alert("Ingrese la cantidad de Horas Semanales");
        }

        var url = window.location.origin + '/Asignaturas/EditAsignaturaAjax';

        $.ajax({
            type: "POST",
            url: url,
            data: { id, nombre, horassemanales, refcurso },
            success: function (response) {
                if (response = "Save") {
                    window.location.replace(window.location.href); 
                }
            }
        });
    }

    function eliminarAsignatura() {
        var url = window.location.origin + '/Asignaturas/EliminarAsignatura';
        var id = $('input[name=Id]')[0].value;
        $.ajax({
            type: "POST",
            url: url,
            data: { id },
            success: function (response) {
                if (response = "Delete") {
                    window.location.replace(window.location.href);
                }
            }
        });
    }

</script>